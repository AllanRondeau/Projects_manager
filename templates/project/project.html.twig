{% extends 'base.html.twig' %}

{% block content %}
    <aside class="flex mt-8 ml-8 ">
        <a href="{{ url('app_projects') }}" class="flex items-center hover:text-lg transition-all pb-2"><span class="material-symbols-outlined text-md m-auto">arrow_back</span> Projets</a>
    </aside>
    <div class="flex justify-center items-center mt-24 ">
        <div class="flex flex-col mx-12 w-full justify-center p-4 items-center rounded-lg bg-white shadow-[0_2px_15px_-3px_rgba(0,0,0,0.07),0_10px_20px_-2px_rgba(0,0,0,0.04)] dark:bg-neutral-700  md:justify-start md:flex-row space-x-24">
            <img
                    class="w-72 rounded-t-lg object-cover md:h-auto md:!rounded-none md:!rounded-l-lg "
                    src="{{ asset(project.filePath) }}"
                    alt="Project's thumbnail" />
            <div class="flex flex-col justify-start p-6 space-y-4">
                <h5
                        class="mb-2 text-xl font-medium text-neutral-800 dark:text-neutral-50">
                    {{ project.name }}
                </h5>
                <p class="mb-4 text-base text-neutral-600 dark:text-neutral-200">
                    {{ project.description }}
                </p>
                <p class="text-xs text-neutral-500 dark:text-neutral-300">
                    {{ project.startDate.format('d/m/Y') }} - {{ project.endDate ? project.endDate.format('d/m/Y') : 'En cours' }}
                </p>
            </div>
        </div>
    </div>
{% endblock %}
